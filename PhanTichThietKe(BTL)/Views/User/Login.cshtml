@model Education.Model.Entities.User
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_ViewLayout.cshtml";
}

<div class="hero-wrap js-fullheight" style="background-image: url('@Url.Content("~/images/bg_1.jpg")');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center" data-scrollax-parent="true">
            <div class="col-md-7 ftco-animate">
                <span class="subheading">Welcome to Education</span>
                <h1 class="mb-4">We are a school advising support system</h1>
                <p class="caps">Far far away, behind the word mountains, far from the countries Vokalia and Consonantia</p>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section ftco-no-pb ftco-no-pt">
    <div class="container">
        <div class="row">
            <div class="col-md-7"></div>
            <div class="col-md-5 order-md-last">
                <div class="login-wrap p-4 p-md-5">
                    <h3 class="mb-4">Đăng Nhập</h3>
                   
                    <form asp-controller="User" asp-action="Login" method="post" class="signup-form">
                        <div class="form-group">
                            <label asp-for="UserType" for="role">Vai trò</label>
                            <select id="role" name="UserType" class="form-control">
                                <option value="Admin">Admin</option>
                                <option value="Teacher">GVCN</option>
                                <option value="Sinhvien">Sinhvien</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label asp-for="Id" class="control-label">Nhập tên đăng nhập</label>
                            <input asp-for="Id" name="Id" class="form-control w-100" />
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="MatKhau" class="control-label">Nhập mật khẩu</label>
                            <input asp-for="MatKhau" name="MatKhau" class="form-control w-100" />
                            <span asp-validation-for="MatKhau" class="text-danger"></span>
                        </div>

                        <div class="form-group d-flex justify-content-end mt-4">
                            <button type="submit" class="btn btn-primary submit"><span class="fa fa-paper-plane"></span></button>
                        </div>
                    </form>
                    <p class="text-center">Bạn quên mật khẩu? <a href="#signin">Đổi mật khẩu</a></p>
                </div>
            </div>
        </div>
    </div>
</section>

