@model List<Education.Model.Entities.SinhVien>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/HoTroCoVan/Views/Shared/_Layout.cshtml";
}


<!-- Body Start -->
<div class="container bg-white col-sm-12 mb-5 ">
    <div class="content mb-5">
        <h1 class="mb-5" style="text-align:center"><b>Quản lý sinh viên</b></h1>
        <!-- Table Start -->
        <div class="container-fluid">
            <div class="row ">
                <div class="col-12">
                    <div class="bg-light rounded h-100 p-4">
                        <h3 class="mb-4">Danh sách sinh viên</h3>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Mã sinh viên</th>
                                        <th scope="col">Họ tên</th>
                                        <th scope="col">Ngày Sinh</th>
                                        <th scope="col">Giới tính</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Địa chỉ</th>
                                        <th scope="col">Lớp</th>
                                        <th scope="col">Khoa</th>
                                        <th scope="col">Trạng thái</th>
                                        <th scope="col">Cập nhật</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.MaSv</td>
                                            <td>@item.HoTen</td>
                                            <td>@item.NgaySinh</td>
                                            <td>@item.GioiTinh</td>
                                            <td>@item.Email</td>
                                            <td>@item.DiaChi</td>
                                            <td>@item.Lop</td>
                                            <td>@item.Khoa</td>
                                            <td>@item.trangThai</td>
                                            <td>
                                                <a href="/HoTroCoVan/SinhVien/Edit/@item.MaSv">
                                                    <button type="button" class="btn btn-square btn-outline-primary m-2">
                                                        <i class="fa fa-edit"></i>
                                                    </button>
                                                </a>
                                                <a href="/HoTroCoVan/SinhVien/Delete/@item.MaSv" class="btn btn-square btn-outline-danger m-2">
                                                    Xóa
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/HoTroCoVan/SinhVien/Create" class="btn btn-primary mb-2" style="text-align:left;">Thêm mới</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Table End -->
    </div>
</div>
<!-- Body End -->