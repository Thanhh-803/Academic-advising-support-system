@model Education.Model.Entities.Blog
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}



<div class="content mb-5">
    <div class="card-body">
        <h5 class="card-title">Thêm Page mới</h5>
        <form asp-action="Create" asp-controller="Blog" method="post" class="row g-3">
            <div class="col-md-6">
                <label asp-for="Id" class="form-label">Stt</label>
                <input asp-for="Id" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="Name" class="form-label">Tên Page</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="col-md-6">
            <label asp-for="Content" class="form-label">Nội dung</label>
            <input asp-for="Content" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="Image" class="form-label">Image</label>
                <input type="file" asp-for="Image" class="form-control" />
            </div>

            <div class="col-md-6">
                <label asp-for="CreateBy" class="form-label">Người tạo</label>
                <input asp-for="CreateBy" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="CreateDate" class="form-label">Ngày tạo</label>
                <input  type="date" asp-for="CreateDate" class="form-control" />
            </div>


            <div class="col-12 text-center mt-2">
                <button type="submit" class="btn btn-primary">Thêm mới</button>
                <button type="button" onclick="window.location.href='/Administrator/Blog/Index'" class="btn btn-secondary">Hủy</button>
            </div>
        </form>
    </div>
</div>
